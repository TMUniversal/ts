{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "outDir": "./dist",
    "lib": ["ES2020"],
    "types": ["node"],
    "newLine": "lf",
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "pretty": false,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": false,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "disableSizeLimit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    "noImplicitAny": true
  }
}
