  "version": "1.0.3",
  "description": "TypeScript config, linting for my projects",
  "author": "TMUniversal <me@tmuniversal.eu>",
  "scripts": {
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
